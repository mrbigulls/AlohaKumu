@using AlohaKumu.Models;
@using TestApp.Models;
@{
    Admin loggedIn = (Admin)Session["User"];
    List<Study> studiesRun = DataAccessor.getStudiesByAdminID(loggedIn.ID);
    List<User> users = DataAccessor.getUsers().ToList();
    List<WordList> wordLists = DataAccessor.getWordLists();
    List<WordSublist> wordSublists = DataAccessor.getWordSublists();

    <p>Studies</p>
    <table>
        <tr>
            <td>Name</td>
            <td>Target Words/Minute</td>
            <td>Active</td>
            <td>Wait Hours</td>
            <td>Wait Mins</td>
            <td>Wait Secs</td>
            <td>See Instructions</td>
            <td>Hear Instructions</td>
            <td>Trials per Word per Session</td>
        </tr>
        @foreach (Study s in studiesRun)
        {
            <tr>
                <td>@s.Name</td>
                <td>@s.TargetWordsPerMinute</td>
                <td>@s.Active</td>
                <td>@s.WaitHours</td>
                <td>@s.WaitMins</td>
                <td>@s.WaitSecs</td>
                <td>@s.SeeInstructions</td>
                <td>@s.HearInstructions</td>
                <td>@s.WordTrialsPerBlock</td>
            </tr>
        }
    </table>
    <p>Users</p>
    <table>
        <tr>
            <td>Username</td>
            <td>Active</td>
        </tr>
        @foreach (User u in users)
        {
            <tr>
                <td>@u.Username</td>
                <td>@u.Active</td>
            </tr>
        }
    </table>
    <p>Word Lists</p>
    <table>
        @foreach (WordList wl in wordLists)
        {
            foreach (WordSublist sl in wordSublists)
            {
                List<Word> words = DataAccessor.getWordList(wl.ID, sl.ID, false);

                <tr>
                    <td colspan="4">@wl.Name@sl.Name</td>
                </tr>
                <tr>
                    <td>English</td>
                    <td>Hawaiian</td>
                    <td>Picture</td>
                    <td>Sound</td>
                </tr>
                foreach (Word w in words)
                {
                    <tr>
                        <td>@w.English</td>
                        <td>@w.Hawaiian</td>
                        <td>THUMBNAIL HERE</td>
                        <td>SOUND PLAY HERE</td>
                    </tr>    
                }
            }
        }
    </table>
}